<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <View
        android:id="@+id/v_user"
        android:background="@drawable/container_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="@id/v_user"
        app:layout_constraintEnd_toEndOf="@id/v_user"
        app:layout_constraintTop_toTopOf="@id/v_user"
        app:layout_constraintBottom_toBottomOf="@id/v_user"/>

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/v_user"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profile_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile_mail"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:hint="@string/username"
        app:layout_constraintTop_toBottomOf="@id/v_user"
        app:layout_constraintStart_toEndOf="@id/profile_img"/>

    <TextView
        android:id="@+id/tv_profile_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:hint="email"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toEndOf="@id/profile_email"/>

    <Button
        android:id="@+id/btn_minhas_compras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:text="Minhas Compras"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profile_email"/>


</androidx.constraintlayout.widget.ConstraintLayout>