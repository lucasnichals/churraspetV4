<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/racao"
        app:layout_constraintEnd_toStartOf="@+id/editP1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="380dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/editMenu"
        android:layout_width="308dp"
        android:layout_height="76dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="PRODUTOS DISPONIVEIS"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:duplicateParentState="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Racao Gato CPET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@+id/editMenu" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/racao_dog"
        app:layout_constraintEnd_toStartOf="@+id/editP2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="360dp"
        android:layout_marginEnd="10dp"/>


    <EditText
        android:id="@+id/editP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:duplicateParentState="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Racao Cachorro CPET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@+id/editP1" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/sache_cat"
        app:layout_constraintEnd_toStartOf="@+id/editP3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="260dp"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/editP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:duplicateParentState="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sache Gato CPET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img3"
        app:layout_constraintTop_toBottomOf="@+id/editP2" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/sache_dog"
        app:layout_constraintEnd_toStartOf="@+id/editP3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="10dp"/>

    <EditText
        android:id="@+id/editP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:duplicateParentState="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sache Cachorro CPET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/img4"
        app:layout_constraintTop_toBottomOf="@+id/editP3"/>

    <Button
        android:id="@+id/bComprar"
        android:layout_width="140dp"
        android:layout_height="59dp"
        android:layout_marginStart="219dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="82dp"
        android:fontFamily="serif-monospace"
        android:text="Carrinho"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editP3" />

    <TextView
        android:id="@+id/textV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="85dp"
        android:text="25.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editP1"
        app:layout_constraintTop_toBottomOf="@+id/editMenu" />

    <TextView
        android:id="@+id/textV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="85dp"
        android:text="38.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editP2"
        app:layout_constraintTop_toBottomOf="@+id/textV1" />

    <TextView
        android:id="@+id/textV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="80dp"
        android:text="5.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editP3"
        app:layout_constraintTop_toBottomOf="@+id/textV2" />

    <TextView
        android:id="@+id/textV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="80dp"
        android:text="5.50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editP4"
        app:layout_constraintTop_toBottomOf="@+id/textV3" />
</androidx.constraintlayout.widget.ConstraintLayout>